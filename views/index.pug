extends layout

block content
        div(id="my-player")
                p(id='song-title') 
                div
                        span(id="playIcon" class="icon fa fa-play fa-2x" aria-hidden="true")
                        span(id="nextIcon" class="icon fa fa-step-forward fa-2x" aria-hidden="true")
                        span(id="randomIcon" class="icon fa fa-random fa-2x" aria-hidden="true")
                        span(id='time')
                div(id="progressBar")
                        span(id="caret" class="fa fa-caret-down fa-lg" aria-hidden="true")
                        div(id="myProgress")
                                div(id="myBar")
                div(id='embed-player')
        table(id='table')
                thead
                        th Songs
                        // th Url
                tbody
                        for song in songs
                                tr
                                        td(class='song-title' id=song.id)= song.title 
                                        td
                                                // a(href="https://youtube.com/watch?v="+song.id) Lien vers youtube
                                                span(class='song-id' style='display:none')= song.id

block scripts
        script(src="https://www.youtube.com/player_api")
        script(src="./public/js/grandeMusique.js")
